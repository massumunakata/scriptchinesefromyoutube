import yt_dlp
import os
import whisper

model = whisper.load_model("small")

query = ""  #@param {type:"string"}
youtube_urls_input = query
youtube_urls = youtube_urls_input.strip().split()

for i, url in enumerate(youtube_urls):
    print(f"\nğŸ¬ å‡¦ç†ä¸­ã®å‹•ç”» {i+1}: {url}")

    # ãƒ•ã‚¡ã‚¤ãƒ«åã‚’å‹•ç”»ã”ã¨ã«ãƒ¦ãƒ‹ãƒ¼ã‚¯ã«
    original_mp3 = f"downloaded_{i}.mp3"
    fast_mp3 = f"fast_{i}.mp3"

    # ãƒ€ã‚¦ãƒ³ãƒ­ãƒ¼ãƒ‰è¨­å®š
    ydl_opts = {
        'format': 'bestaudio/best',
        'outtmpl': f'downloaded_{i}.%(ext)s',
        'postprocessors': [{
            'key': 'FFmpegExtractAudio',
            'preferredcodec': 'mp3',
            'preferredquality': '192',
        }],
        'quiet': True
    }

    # éŸ³å£°ãƒ€ã‚¦ãƒ³ãƒ­ãƒ¼ãƒ‰
    with yt_dlp.YoutubeDL(ydl_opts) as ydl:
        try:
            ydl.download([url])
        except Exception as e:
            print(f"âš ï¸ ãƒ€ã‚¦ãƒ³ãƒ­ãƒ¼ãƒ‰å¤±æ•—: {e}")
            continue

    # ğŸ” 1.5å€é€Ÿã«å¤‰æ›ï¼ˆffmpegï¼‰
    try:
        os.system(f"ffmpeg -i {original_mp3} -filter:a 'atempo=1.5' -vn {fast_mp3}")
    except Exception as e:
        print(f"âš ï¸ é€Ÿåº¦å¤‰æ›å¤±æ•—: {e}")
        continue

    # Whisperã§æ–‡å­—èµ·ã“ã—ï¼ˆä¸­å›½èªæŒ‡å®šï¼‰
    try:
        result = model.transcribe(fast_mp3, language="zh")
        print("ğŸ“ èªè­˜ã•ã‚ŒãŸãƒ†ã‚­ã‚¹ãƒˆ:")
        print(result["text"])
    except Exception as e:
        print(f"âš ï¸ æ–‡å­—èµ·ã“ã—å¤±æ•—: {e}")
